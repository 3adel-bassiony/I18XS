{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"./src/tests/**/*"
	],
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "ESNext",
		"moduleResolution": "node",
		"outDir": "./build",
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"strict": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"rootDir": "./src",
		"removeComments": true,
		"composite": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}